<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/content">


        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">



            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">



                    <ImageView
                        android:id="@+id/technicians_cat"
                        android:layout_width="40dp"
                        android:layout_height="160dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/test_icon_1"
                        android:layout_weight="1"
                        android:gravity="center"
                        />

                    <ImageView
                        android:id="@+id/emergencies_cat"
                        android:layout_width="40dp"
                        android:layout_height="160dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/test_icon_2"
                        android:layout_weight="1"
                        android:gravity="center"
                        />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/household_cat"
                        android:layout_width="40dp"
                        android:layout_height="160dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="@drawable/test_icon_3"
                        android:layout_weight="1"
                        android:gravity="center"
                        />

                    <ImageView
                        android:id="@+id/others_cat"
                        android:layout_width="40dp"
                        android:layout_height="160dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/test_icon_4"
                        android:layout_weight="1"
                        android:gravity="center"
                        />

                </LinearLayout>



            </LinearLayout>











        </android.support.v4.widget.SwipeRefreshLayout>



        <!--Search Button icon-->
        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/floatingSearchIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:src="@drawable/ic_search_black_24dp"
            fab:fab_colorNormal="@color/floating_icon"
            fab:fab_colorPressed="@color/colorPrimary"
            fab:fab_colorRipple="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </FrameLayout>

</LinearLayout>